@model IEnumerable<CinemaFinalMVC.Models.Country>

@{
    ViewData["Title"] = "Index";
}

<br />
<div class="row">
    <div class="col-3">
        <br />
        <ul class="list-group">
            <li class="list-group-item" style="background-color: lightgrey;"><a style="color: white; font-size: 25px" }" asp-area="" asp-controller="Movies" asp-action="Index"></a>Dashboard</li>
            <li class="list-group-item"><a asp-area="" asp-controller="Movies" asp-action="Index">Movies</a></li>
            <li class="list-group-item"><a asp-area="" asp-controller="Genres" asp-action="Index">Genres</a></li>
            <li class="list-group-item"><a asp-area="" asp-controller="MovieGenres" asp-action="Index">Movie Genres</a></li>
            <li class="list-group-item"><a asp-area="" asp-controller="Countries" asp-action="Index">Countries</a></li>
            <li class="list-group-item"><a asp-area="" asp-controller="Celebrities" asp-action="Index">Celebrities</a></li>
            <li class="list-group-item"><a asp-area="" asp-controller="Professions" asp-action="Index">Celebrity Professions</a></li>
            <li class="list-group-item"><a asp-area="" asp-controller="CelebrityProfessions" asp-action="Index">Professions</a></li>
            <li class="list-group-item"><a asp-area="" asp-controller="MovieCelebrities" asp-action="Index">Movie Celebritites</a></li>
        </ul>
    </div>
    <div class="col-9">
        <h1>Countries Table</h1>

        <p>
            <a asp-action="Create">Create New</a>
        </p>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>